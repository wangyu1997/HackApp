<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:background="@color/white"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="4dp"
    fresco:cardCornerRadius="1dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.脑挫裂伤的临床表现中，下述哪项是错误的?"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <lib.lhh.fiv.library.FrescoImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                fresco:actualImageScaleType="centerCrop"
                fresco:backgroundImage="@color/white"
                fresco:fadeDuration="300"
                fresco:failureImage="@drawable/fao"
                fresco:placeholderImage="@drawable/fap"
                fresco:placeholderImageScaleType="centerInside"
                fresco:progressBarAutoRotateInterval="3000"
                fresco:progressBarImage="@drawable/loading"
                fresco:progressBarImageScaleType="centerInside"
                fresco:retryImage="@drawable/retry"
                fresco:retryImageScaleType="centerInside" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <RadioButton
                    android:id="@+id/qa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="A.意识障碍在伤后立即出现"
                    android:textColor="@color/gray3" />

                <RadioButton
                    android:id="@+id/qb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="B.昏迷时间多在30分钟以上"
                    android:textColor="@color/gray3" />

                <RadioButton
                    android:id="@+id/qc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="C.必有蛛网膜下腔出血"
                    android:textColor="@color/gray3" />

                <RadioButton
                    android:id="@+id/qd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="D.必有神经系统局部症状及体征"
                    android:textColor="@color/gray3" />

            </RadioGroup>

        </LinearLayout>


    </ScrollView>
</android.support.v7.widget.CardView>

